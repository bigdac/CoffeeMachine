<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/li_buy_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >

  <android.support.v7.widget.RecyclerView

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/grid"
        />
    </RelativeLayout>

       <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         >


           <android.support.v7.widget.RecyclerView
               android:id="@+id/recy_bringinto"
               android:layout_width="0dp"
               android:layout_weight="6"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true" />
           <Button
               android:id="@+id/bt_buy"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="立即购买"
               android:textSize="16sp"
               android:textColor="@color/white"
               android:background="@drawable/bg_shape_anniugray"
               android:layout_marginRight="40dp"
               />

       </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_buy_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_xq_pic"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@mipmap/xq_1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_xq_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_xq_pic"
            android:layout_toRightOf="@+id/iv_xq_pic"
            android:textColor="@color/color_black"
            android:text="西洋参"
            android:textSize="28sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:textSize="22sp"
                android:text="价格"
                android:layout_below="@+id/tv_xq_name"
                android:layout_toRightOf="@+id/iv_xq_pic"
                android:textColor="@color/color_black"
                />
            <TextView
                android:id="@+id/tv_xq_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_price"
                android:layout_toRightOf="@+id/tv_price"
                android:textSize="22sp"
                android:layout_marginLeft="20dp"
                android:textColor="#ff5932"
                />
        <TextView
            android:id="@+id/tv_xq_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_toRightOf="@+id/iv_xq_pic"
            android:textColor="@color/color_black"
            android:text="产地"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/tv_xq_adressmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_xq_adress"
            android:layout_toRightOf="@+id/tv_xq_adress"
            android:text="产地美国，真材实料"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/tv_xq_gx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_xq_adress"
            android:layout_toRightOf="@+id/iv_xq_pic"
            android:textColor="@color/color_black"
            android:text="功效"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:id="@+id/tv_xq_gxmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_xq_gx"
            android:layout_toRightOf="@+id/tv_xq_gx"
            android:text=" 补气养阴，清热生津。保护心血管系统；提高免疫力；促进血液活力；"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"

            />
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_above="@+id/li_xq_bt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="200dp"

                >
                <ImageView
                    android:id="@+id/iv_xq_reduce"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xq_reduce"
                    />
                <TextView
                    android:id="@+id/tv_xq_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#464646"
                    android:text="5"
                    android:layout_gravity="center"
                    />

                <ImageView
                    android:id="@+id/iv_xq_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:src="@mipmap/xq_add"
                    />
            </LinearLayout>
        <LinearLayout
            android:id="@id/li_xq_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/bt_buy_qx"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="取消购买"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="40dp"
                android:textSize="20sp"
                android:textColor="#ff5932"
                android:background="@drawable/bg_shape_anniugray1"
                />
            <Button
                android:id="@+id/bt_buy_gm"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="170dp"
                android:text="立即购买"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_shape_anniugray"
                />
        </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
