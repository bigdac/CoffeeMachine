<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
   >

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/include_receive_view"
        android:layout_weight="11"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ff00"
        layout="@layout/include_transport_view"
        android:layout_weight="4"/>
    <GridView
        android:id="@+id/gv_main_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidth"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:columnWidth="150dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4"
        >
        <Button
            android:id="@+id/bt_send1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="命令1"
            />
        <Button
            android:id="@+id/bt_send2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="命令2"
            />
        <Button
            android:id="@+id/bt_send3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="命令3"
            />
        <Button
            android:id="@+id/bt_send4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="命令4"
            />
        <Button
            android:id="@+id/bt_send5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="命令5"
            />
        <Button
            android:id="@+id/bt_send6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给后台发命令5"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img1"
            />
    </LinearLayout>

</LinearLayout>
