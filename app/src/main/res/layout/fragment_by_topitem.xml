<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="250dp">
  <RelativeLayout
      android:id="@+id/rl_top1"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:background="#000000"
      android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@mipmap/iimg" />
    <RelativeLayout
        android:id="@+id/rl_goodscheck"

        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignRight="@+id/iv_goods_pic"

        android:layout_alignBottom="@+id/iv_goods_pic"
        >
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_goods_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/imgno"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"

        />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="葛藤独醒茶"
        android:ems="4"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_alignLeft="@+id/iv_goods_pic"
        android:layout_alignBottom="@+id/iv_goods_pic"
        android:textColor="@color/color_black"
        />
    <TextView
        android:id="@+id/tv_buy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_goods_name"
        android:layout_alignTop="@+id/rl_goodscheck"
        android:textColor="#ff5932"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/tv_buy_price"
        android:layout_alignBottom="@+id/rl_goodscheck"
        android:textColor="#ff5932"
        />
  </RelativeLayout>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
</RelativeLayout>
