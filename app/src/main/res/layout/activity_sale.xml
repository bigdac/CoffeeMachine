<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <Button
       android:id="@+id/bt_choose"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20dp"
       android:text="选择日期"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="20dp"
       />
    <Button
        android:id="@+id/bt_choose_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="返回"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/tv_choose"
        android:layout_toRightOf="@+id/bt_choose"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易总数:"
        />
    <TextView
        android:id="@+id/tv_success"
        android:layout_toRightOf="@+id/tv_choose"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易成功数:"
        />
    <TextView
        android:id="@+id/tv_fail"
        android:layout_toRightOf="@+id/tv_success"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易失败数:"
        />
    <TextView
        android:id="@+id/tv_choose_day"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_choose"
        android:text="起始日期:"
        />
 <TextView
     android:id="@+id/tv_choose_day1"
     android:layout_alignParentRight="true"
     android:layout_marginRight="90dp"
     android:layout_marginTop="20dp"
     android:layout_marginBottom="10dp"
     android:textSize="20dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/bt_choose"
     android:text="结束日期:"
     />
    <TextView
        android:id="@+id/tv_choose_money"
        android:layout_toLeftOf="@+id/bt_choose_back"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前日期:"
        />
 <LinearLayout
     android:id="@+id/li_title"
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:layout_below="@+id/tv_choose_day"
     android:orientation="horizontal"
     >
  <TextView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="@color/black"
      android:text="商品名称"
      />
  <TextView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="@color/black"
      android:text="交易单号"
      />
  <TextView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="@color/black"
      android:text="价格"
      />
  <TextView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="@color/black"
      android:text="交易结果"
      />

  <TextView
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="20dp"
      android:textColor="@color/black"
      android:text="支付方式"
      />


 </LinearLayout>
 <View
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:layout_below="@+id/li_title"
     android:background="@color/color_toblue"
     />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
       android:layout_below="@+id/li_title"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        />

</RelativeLayout>
